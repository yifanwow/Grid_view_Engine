<Window x:Class="Grid_view_Engine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid view Engine" Height="450" Width="800">
    <Grid>
        <!-- Define Rows for better organization -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- For the buttons and input box -->
            <RowDefinition Height="*"/>
            <!-- For the list and output box -->
        </Grid.RowDefinitions>

        <!-- Define Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Start Process Button -->
        <Button Content="Start Process" Grid.Row="0" Grid.Column="0" Margin="10" Height="30" Click="OnStartProcess"/>

        <!-- InputSteamPathBox -->
        <TextBox x:Name="InputSteamPathBox" Grid.Row="0" Grid.Column="1" Margin="10,10,10,0"/>

        <!-- OutputBox -->
        <TextBox x:Name="OutputBox" Grid.Row="1" Grid.Column="0" Margin="10" VerticalScrollBarVisibility="Auto" TextChanged="OutputBox_TextChanged"/>

        <!-- GamesList -->
        <ListBox x:Name="GamesList" Grid.Row="1" Grid.Column="1" Margin="10" SelectionChanged="GamesList_SelectionChanged"/>
    </Grid>
</Window>